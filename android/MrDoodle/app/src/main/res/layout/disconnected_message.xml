<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/disconnectedMessageBox"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/disconnected_message_backdrop"
	android:orientation="vertical"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	>

	<TextView
		android:id="@+id/disconnectedTextView"
		style="@style/Body1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/disconnected_message_title"
		android:textColor="@android:color/white"
		/>

	<TextView
		android:id="@+id/disconnectedExplanationTextView"
		style="@style/Caption"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@android:color/white"
		tools:text="Unable to connect to server"/>

</LinearLayout>
