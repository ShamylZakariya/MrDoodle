<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<android.support.v7.widget.Toolbar
		android:id="@+id/toolbar"
		style="@style/DefaultToolbarStyle"
		/>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	              xmlns:tools="http://schemas.android.com/tools"
	              android:layout_width="match_parent"
	              android:layout_height="match_parent"
	              android:paddingLeft="@dimen/activity_horizontal_margin"
	              android:paddingRight="@dimen/activity_horizontal_margin"
	              android:paddingTop="@dimen/activity_vertical_margin"
	              android:paddingBottom="@dimen/activity_vertical_margin"
	              android:orientation="vertical"
	              tools:context="com.inventcreativebusinesssolutions.consultpro.ui.SyncLogItemDetailActivity.SyncLogItemDetailFragment">

		<TextView
			android:id="@+id/dateTextView"
			tools:text="Sync on 15 Jan 2015"
			android:layout_width="match_parent"
			style="@style/Body2"
			android:textAllCaps="true"
			android:textColor="@color/primaryLight"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"/>

		<TextView
			android:id="@+id/statusTextView"
			tools:text="Success"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			/>

		<TextView
			android:id="@+id/failureTextView"
			tools:text="Unable to connect to server, code XXX"
			android:layout_width="match_parent"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_height="wrap_content"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/sync_log_entry_detail_transcript"
			style="@style/Body2"
			android:textAllCaps="true"
			android:textColor="@color/primaryLight"
		    android:paddingTop="16dp"
			android:paddingBottom="16dp"
			/>

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1">

			<TextView
				android:id="@+id/logTextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:typeface="monospace"
				android:textSize="12sp"/>

		</ScrollView>


	</LinearLayout>

</LinearLayout>
