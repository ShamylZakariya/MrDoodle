<resources>

	<!-- Base application theme. -->
	<style name="MrDoodle" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="alertDialogTheme">@style/AlertDialogStyle</item>


		<!-- Set AppCompatâ€™s color theme attrs -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primaryDark</item>
		<item name="colorAccent">@color/accent</item>

		<item name="android:windowBackground">@color/windowBackground</item>
		<item name="android:textColor">@color/textColor</item>
	</style>

	<style name="MrDoodle.Home">
	</style>

	<style name="MrDoodle.DoodleActivity">
		<item name="actionBarStyle">@style/ImmersiveToolbarStyle</item>
	</style>

	<style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
		<!-- Customize color of navigation drawer icon and back arrow -->
		<item name="colorControlNormal">@color/toolbarIconColor</item>
		<item name="android:actionMenuTextColor">@color/toolbarIconColor</item>
		<item name="android:textColorSecondary">@color/toolbarTextColor</item>
	</style>

	<style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
		<!-- Set title color -->
		<item name="android:textColor">@color/toolbarTextColor</item>
		<item name="android:textColorSecondary">@color/toolbarTextColor</item>
	</style>

	<style name="ImmersiveToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
		<item name="colorControlNormal">@color/primary</item>
	</style>

	<style name="ImmersiveToolbarStyle" parent="Widget.AppCompat.Toolbar">
		<item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
		<item name="android:theme">@style/ImmersiveToolbarTheme</item>
		<item name="android:background">@color/windowBackground</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:minHeight">?attr/actionBarSize</item>
	</style>


	<style name="Display1" parent="TextAppearance.AppCompat.Display1">
		<item name="android:textColor">@color/textColor</item>
	</style>

	<style name="Display2" parent="TextAppearance.AppCompat.Display2">
		<item name="android:textColor">@color/textColor</item>
	</style>

	<style name="Display3" parent="TextAppearance.AppCompat.Display3">
		<item name="android:textColor">@color/textColor</item>
	</style>

	<style name="Display4" parent="TextAppearance.AppCompat.Display4">
		<item name="android:textColor">@color/textColor</item>
	</style>

	<style name="Body1" parent="TextAppearance.AppCompat.Body1">
		<item name="android:textColor">@color/textColor</item>
	</style>

	<style name="Body2" parent="TextAppearance.AppCompat.Body2">
		<item name="android:textColor">@color/textColor</item>
	</style>

	<style name="ImmersiveAppBarEditText" parent="Widget.AppCompat.EditText">
		<item name="colorControlNormal">@color/primaryDark</item>
		<item name="colorControlActivated">@color/textColor</item>
		<item name="colorControlHighlight">@color/textColor</item>
	</style>

	<style name="ImmersiveTitleTextStyle"
	       parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">@color/toolbarTextColor</item>
	</style>

	<style name="EmptyDoodleGridText" parent="Base.TextAppearance.AppCompat.Large">
		<item name="android:textColor">@color/textColorLight</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_margin">48dp</item>
	</style>

	<!-- alert dialog styles -->
	<style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorAccent">@color/alertDialogAccent</item>
		<item name="android:textColorPrimary">@color/alertDialogText</item>
		<item name="buttonBarButtonStyle">@style/AlertDialogButtonStyle</item>
		<item name="android:windowTitleStyle">@style/AlertDialogTitleTextStyle</item>
	</style>

	<style name="AlertDialogTitleTextStyle">
		<item name="android:textColor">@color/alertDialogText</item>
		<item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
	</style>

	<style name="AlertDialogButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
		<item name="android:textColor">@color/alertDialogAccent</item>
	</style>

	<!-- bottom sheet dialogs -->
	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="AppTheme.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
		<item name="bottomSheetStyle">@style/AppTheme.BottomSheetStyle</item>
	</style>

	<style name="AppTheme.BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
		<item name="android:background">@android:color/white</item>
		<item name="behavior_hideable">true</item>
		<item name="behavior_skipCollapsed">true</item>
	</style>

</resources>
